// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Input {
  id  Int  @id @default(autoincrement())
  new Int? @unique
  old Int? @unique

  groupId Int
  group   Group @relation(fields: [groupId], references: [id])

  systemId Int
  system   System @relation(fields: [systemId], references: [id])
}

model Output {
  id  Int  @id @default(autoincrement())
  new Int? @unique
  old Int? @unique

  groupId Int
  group   Group @relation(fields: [groupId], references: [id])

  systemId Int
  system   System @relation(fields: [systemId], references: [id])
}

model Group {
  id      Int      @id @default(autoincrement())
  group   String
  inputs  Input[]
  outputs Output[]
}

model System {
  id      Int      @id @default(autoincrement())
  system  String
  inputs  Input[]
  outputs Output[]
}
